# Environment Configuration for AtonixCorp Platform
# Copy this file to .env and update the values for your environment

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-in-production-with-50-chars-min
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://atonixcorp_user:atonixcorp_password@db:5432/atonixcorp
POSTGRES_DB=atonixcorp
POSTGRES_USER=atonixcorp_user
POSTGRES_PASSWORD=atonixcorp_password

# Redis Configuration
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=redis_password

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@atonixcorp.com

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=atonixcorp-media
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.cloudfront.net

# Security Configuration
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000

# Monitoring & Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENVIRONMENT=production

# Celery Configuration
CELERY_WORKERS=4
GUNICORN_WORKERS=4

# React Frontend
REACT_APP_API_URL=https://yourdomain.com/api
REACT_APP_ENVIRONMENT=production