# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================

# Django secret key (generate a new one for production)
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Database configuration
DATABASE_URL=postgresql://username:password@db:5432/atonixcorp_prod

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption keys (generate new ones for production)
ENCRYPTION_KEY=your-base64-encoded-encryption-key
JWT_SECRET_KEY=your-jwt-secret-key
API_KEY_SALT=your-api-key-salt
AES_PASSWORD=your-aes-password
AES_SALT=your-aes-salt

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

POSTGRES_DB=atonixcorp_prod
POSTGRES_USER=atonixcorp_user
POSTGRES_PASSWORD=your-postgres-password

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

REDIS_URL=redis://redis:6379/0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@atonixcorp.org
EMAIL_HOST_PASSWORD=your-email-password

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================

KAFKA_ENABLED=false
ZOOKEEPER_ENABLED=false

# =============================================================================
# SSL CERTIFICATE PATHS
# =============================================================================

# Place your SSL certificates in the ssl/ directory:
# ssl/atonixcorp.org.crt
# ssl/atonixcorp.org.key
# ssl/api.atonixcorp.org.crt
# ssl/api.atonixcorp.org.key
# ssl/default.crt (self-signed for default server)
# ssl/default.key